{
    "name": "theme-build",
    "scripts": {
        "install": "yarn compile",
        "compile": "gulp compileLess",
        "compile-watch": "gulp watch",
        "icons": "cpx 'assets/src/icons/**/*' node_modules/uikit/custom/icons && cd node_modules/uikit && npm install && yarn compile && cd -",
        "webpack": "webpack --colors --config webpack.dev.js",
        "webpack-watch": "webpack --watch --colors --config webpack.dev.js",
        "webpack-build": "webpack --colors --config webpack.prod.js",
        "archive": "yarn compile && yarn icons && yarn webpack-build && composer archive --format=zip"
    },
    "devDependencies": {
        "@babel/core": "^7.4.3",
        "@typescript-eslint/eslint-plugin": "^3.2.0",
        "@typescript-eslint/parser": "^3.2.0",
        "babel-loader": "^8.0.5",
        "cpx": "^1.5.0",
        "css-loader": "^2.1.1",
        "eslint": "^7.2.0",
        "eslint-plugin-vue": "^6.2.2",
        "gulp": "^4.0.2",
        "gulp-cssmin": "^0.2.0",
        "gulp-header": "^2.0.9",
        "gulp-less": "^4.0.1",
        "gulp-rename": "^2.0.0",
        "style-loader": "^1.2.1",
        "uikit": "^3.*",
        "vue-loader": "^15.8.3",
        "vue-style-loader": "^4.1.2",
        "vue-template-compiler": "^2.6.11",
        "webpack": "^4.41.5",
        "webpack-cli": "^3.3.10",
        "webpack-merge": "^4.2.2"
    }
}
